/* pages/find/find.wxss */
Page{
    height: 100%;
}
.orderRoot{
    height: 100%;
    display: flex;
    flex-direction: column;
}
.orderTab{
    display: flex;
    margin: 20rpx 25rpx;
}
.tab-title{
    flex: 1;
    text-align: center;
}
.tab-title-view{
    display: block;
    line-height: 35rpx;
}

.titleSelected{
    font-size: 27rpx;
}

.titleUnSelected{
    font-size: 25rpx;
    font-weight: normal;
    color: gray;
}

.headerLineSel {
    background: #F0C355;
    height: 6rpx;
    width: 60rpx;
    margin: auto;
}
.headerLineUnsel {
    background: #fff;
    height: 6rpx;
    width: 40rpx;
}

.orderContent{
    margin: 20rpx 25rpx;
    display: flex;
    flex-wrap: wrap;
    overflow: scroll;
}
.orderItem{
    /* width: 306rpx; */
    width: 100%;
    box-shadow: 5px 5px 5px #EAEAEA;
    margin: 0 10rpx 20rpx 10rpx;
    border-radius: 10rpx;
}
.order-head{
    display: flex;
}
.order-head-avatar{
    width: 75rpx;
}
.order-head-title{
    
}
.order-head-arrow{
    width: 30rpx;
    height: 30rpx;
    margin-top: 10rpx;
    
}
.order-head-assess{
    width: 100rpx;
    margin-right: 20rpx;
    color: #6F6F6F;
    font-size: 30rpx;
    font-weight: normal;
}
.order-head-view{
    flex: 1;
}
.order-head-right{
    display: flex;
}
.avatar{
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
}
.order-hr{
    height: 2rpx;
    background-color: #EFEFEF;
}
.order-content{
    margin-top: 20rpx;
    display: flex;
}
.order-content-img{
    width: 120rpx;
    height: 120rpx;
    border-radius: 15rpx;
}
.order-content-info{
    flex: 1;
    margin-left: 30rpx;
}
.order-content-time,.order-content-price{
    font-size: 25rpx;
    color: #6F6F6F;
}
.order-content-bottom{
    float: right;
}
.btn{
    display: inline-block;
    border: 1px solid #BCBCBC;
    padding: 8rpx 30rpx;
    border-radius: 25rpx;
    color: #676767;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
    font-weight: 400;
}