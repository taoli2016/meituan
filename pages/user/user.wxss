/* pages/user/user.wxss */
Page{
    height: 100%;
  }
.userRoot{
    height: 100%;
    display: flex;
    flex-direction: column;
    /* background-color: #f7f7f7; */
    background-image: linear-gradient(#F4CF5E, #ffffff);
}
.user-head{
    display: flex;
    margin: 15rpx;
    text-align: right;
}
.user-head-avatar{
    width: 120rpx;
}
.user-head-avatar{
    position: relative;
    top: 50%;
    transform: translateY(-50%);
}
.userinfo-avatar{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}
.user-head-name {
    margin-left: 20rpx;
    flex: 1;
    text-align: left;
}
.user-head-name view{
    position: relative;
    top: 50%;
    transform: translateY(-50%);
    font-size: 36rpx;
}
.user-head-setting view,.user-head-speaking view{
    position: relative;
    top: 50%;
    transform: translateY(-50%);
    width: 80rpx;
    text-align: left;
}
.settingIcon,.speakingIcon{
    width: 50rpx;
    height: 50rpx;
}
.user-icon{
    display: flex;
    margin: 15rpx;
}
.user-icon-item{
    flex: 1 ;
    text-align: center;
}
.user-icon-url image{
    width: 60rpx;
    height: 60rpx;
}
.user-icon-descript text{
    font-size: 25rpx;
    color: #252903;
}
.user-content{
    background-color: #fff;
    padding: 30rpx;
    border-radius: 30rpx 30rpx 0 0;
}
.user-content-packet{
    display: flex;
}
.myPacket{
    flex: 1;
    font-size: 36rpx;
}
.enterPacket{
    font-size: 25rpx;
    color: #979797;
    margin-right: 10rpx;
}
.arrow{
    width: 20rpx;
    height: 20rpx;
}
.user-content-packetList{
    display: flex;
    margin-top: 15rpx;
}
.user-content-packetList-item{
    flex: 1;
    text-align: center;
}
.itemPrice{
    font-size: 42rpx;
    font-weight: bold;
}
.itemUnit{
    font-size: 22rpx;
}
.itemTitle{
    font-size: 27rpx;
}
.itemDescript{
    font-size: 25rpx;
    color: #979797;
}
.hrClass{
    margin-top: 25rpx;
    border-top: 1px solid #E8E8E8;
}
.adPic{
    margin-top: 25rpx;
    width: 100%;
    height: 150rpx;
}
.user-content-recommend{
    margin-top: 25rpx;
}
.user-content-recommend-title{
    font-size: 36rpx;
}
.user-content-iconGroup{
    display: flex;
    flex-wrap: wrap;
}
.user-content-icon{
    text-align: center;
}
.user-content-icon image{
    width: 60rpx;
    height: 60rpx;
}
.user-content-name{
    text-align: center;
}
.user-content-name text{
    font-size: 25rpx;
}
.user-content-item{
    width: 25%;
    margin: 25rpx 0;
}
