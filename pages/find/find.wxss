/* pages/find/find.wxss */
Page{
    height: 100%;
}
.findRoot{
    height: 100%;
    display: flex;
    flex-direction: column;
}
.findTab{
    display: flex;
    margin: 20rpx 25rpx;
}
.tab-title{
    flex: 1;
    text-align: center;
}
.tab-title-view{
    display: block;
    line-height: 35rpx;
}

.titleSelected{
    font-size: 35rpx;
}

.titleUnSelected{
    font-size: 32rpx;
    font-weight: normal;
    color: gray;
}

.headerLineSel {
    background: #F0C355;
    height: 6rpx;
    width: 60rpx;
    margin: auto;
}
.headerLineUnsel {
    background: #fff;
    height: 6rpx;
    width: 40rpx;
}

.findContent{
    margin: 20rpx 25rpx;
    display: flex;
    flex-wrap: wrap;
    overflow: scroll;
}
.findItem{
    /* width: 306rpx; */
    width: 47%;
    box-shadow: 5px 5px 5px #EAEAEA;
    margin: 0 10rpx 20rpx 10rpx;
    border-radius: 10rpx;
}
.findItem-descript{
    margin: 0 20rpx;
}
.findItem-descript text{
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    -webkit-box-orient: vertical;
}
.findItem-img{
    width: 100%;
    height: 420rpx;
    border-radius: 10rpx 10rpx 0 0;
}
.findItem-footer{
    margin: 0 20rpx;
    margin-top: 10rpx;
    line-height: 60rpx;
    display: flex;
}
.avatar{
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    vertical-align: middle;
}
.findItem-footer-name{
    flex: 1;
    font-size: 25rpx;
    margin-left: 10rpx;
}
.findItem-footer-star{
    width: 30rpx;
    height: 30rpx;
}
.findItem-footer-num{
    font-size: 30rpx;
    font-weight: normal;
    color: #707070;
    margin-left: 10rpx;
}