/* pages/home/home.wxss */
Page{
  height: 100%;
}
.homeRoot{
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: #f7f7f7;
}
.header{
  height:90rpx;
  background-color: #F4CF5E;
  display: flex;
}

.avatar{
  width: 90rpx;
}

.location{
  width: 100rpx;
  margin: 15rpx 0rpx;
}

.place{
  font-size: 30rpx;
}

.arrow{
  height: 30rpx;
  width: 30rpx;
}

.weather{
  font-size: 18rpx;
  color: #563C1E;
}

.search{
  flex:1;
  display: flex;
}

.searchipt{
  flex: 1;
  background-color: #fff;
  height: 60rpx;
  margin:15rpx 0rpx;
  border-radius: 0 0rpx 0rpx 0;
}


.iptSearchImg{
  width: 60rpx;
  height: 60rpx;
  margin: 15rpx 0rpx 15rpx 15rpx;
  background-color: #fff;
  border-radius: 10rpx 0 0 10rpx;
}

.iptSearchImg image{
  width: 36rpx;
  height: 36rpx;
  margin: 12rpx 0 0 10rpx;
}

.iptSayImg{
  width: 60rpx;
  height: 60rpx;
  margin: 15rpx 15rpx 15rpx 0rpx;
  background-color: #fff;
  border-radius: 0rpx 10rpx 10rpx 0rpx;
}

.iptSayImg image{
  width: 35rpx;
  height: 35rpx;
  margin: 12rpx 10rpx 0 0rpx;
}

.scan{
  width: 60rpx;
  height: 100%;
  margin: 15rpx;
}

.sacnImg{
  height: 50rpx;
  width: 50rpx;
}

.content{
  flex: 1;
  background-color: #FEF7E0;
}

.userinfo-avatar {
  width: 60rpx;
  height: 60rpx;
  margin: 15rpx;
  border-radius: 50%;
}